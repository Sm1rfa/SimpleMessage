{
  "name": "simple-message",
  "version": "1.2.0",
  "description": "messaaging application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build":"build --win",
    "ship":"build --win -p always"
  },
  "repository": "https://github.com/Sm1rfa/SimpleMessage",
  "keywords": [
    "Electron",
    "simple",
    "message"
  ],
  "author": "Stoyan Bonchev",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "~1.7.8",
    "electron-builder": "^19.45.5"
  },
  "build": {
    "appId": "simple.messages",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "rpm",
          "arch": "x64"
        }
      ]
    },
    "icon": "images/msgIco.ico"
  },
  "postinstall": "electron-builder install-app-deps",
  "dependencies": {
    "electron-store": "^1.3.0",
    "electron-updater": "^2.18.0"
  }
}
